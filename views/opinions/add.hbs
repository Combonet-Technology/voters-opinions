<h3>State opinion</h3>
<div class="row">
    <form action="/opinions" method="POST" class="col s12">
        <div class="row">
            <div class="input-field">
                <input type="text" id="title" name="poll">
                <label for="title">Poll</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                <select id="status" name="status">
                    <option value="public" selected>Public</option>
                    <option value="private">Private</option>
                </select>
                <label for="status">Status</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                <h5>What are  your reasons:</h5>
                <textarea id="body" name="opinion"></textarea>
            </div>
        </div>

        <div class="row">
            <input type="submit" value="Save" class="btn">
            <a href="/dashboard" class="btn orange">Cancel</a>
        </div>
    </form>
</div>
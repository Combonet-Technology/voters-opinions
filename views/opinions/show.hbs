<div class="row">
    <div class="col s12 m8">
        <h3>{{opinion.poll}}
            <small>{{{editIcon opinion.user user opinion._id false}}}</small>
        </h3>
        <div class="card opinion">
            <div class="card-content">
                <span class="card-title">{{formatDate date 'MMMM Do YYYY, h:mm:ss a'}}</span>
                {{{opinion.opinion}}}
            </div>
        </div>
    </div>
    <div class="col s12 m4">
        <div class="card center-align">
            <div class="card-content">
                <span class="card-title">{{opinion.user.displayName}}</span>
                <img src="{{opinion.user.image}}" class="circle responsive-img img-small">
            </div>
            <div class="card-action">
                <a href="/stories/user/{{opinion.user._id}}">More From {{opinion.user.firstName}}</a>
            </div>
        </div>
    </div>
</div>
<h6>Dashboard</h6>
<h3>Welcome {{name}}</h3>
<p>Here are your past opinions</p>
{{#if opinions}}
<table class="striped">
    <thead>
        <tr>
            <th>Poll</th>
            <th>Date</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each opinions}}
        <tr>
            <td><a href="/opinions/{{_id}}">{{poll}}</a></td>
            <td>{{formatDate createdAt 'MMM Do YYYY, H:MM:ss'}}</td>
            <td><span class="dash-status">{{status}}</span></td>
            <td>
                <a href="/opinions/edit/{{_id}}" class="btn btn-float">
                    <i class="fas fa-edit"></i>
                </a>

                <form action="/opinions/{{_id}}" method="POST" id="delete-form">
                    <input type="hidden" name="_method" value="DELETE">
                    <button type="" class="btn red">
                        <i class="fas fa-trash"></i>
                    </button>
                </form>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
{{else}}
<p>You have not created any stories</p>
{{/if}}